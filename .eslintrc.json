{
  "rules": {
    "react/react-in-jsx-scope": "off", // Disable the rule requiring React in scope
    "react/prop-types": "off" // Disable the rule requiring prop-types
  },
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
